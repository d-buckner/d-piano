{
	"name": "d-piano",
	"version": "0.2.0",
	"description": "Web Audio instrument using Salamander Grand Piano samples",
	"repository": {
		"url": "https://github.com/d-buckner/piano"
	},
	"main": "build/index.js",
	"type": "module",
	"types": "build/index.d.ts",
	"scripts": {
		"build": "vite build",
		"prepare": "npm run build",
		"increment": "npm version v$(semver --increment $(npm show d-piano version)) --git-tag-version=false --allow-same-version",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"watch": "tsc --watch"
	},
	"files": [
		"README.md",
		"LICENSE",
		"build",
		"src",
		"scripts"
	],
	"author": "d-bucker",
	"license": "MIT",
	"devDependencies": {
		"@types/chai": "^4.2.11",
		"@types/mocha": "^7.0.2",
		"@types/node": "^24.0.4",
		"@typescript-eslint/eslint-plugin": "^8.35.0",
		"@typescript-eslint/parser": "^8.35.0",
		"chai": "^4.2.0",
		"eslint": "^9.29.0",
		"eslint-plugin-import": "^2.32.0",
		"mocha": "^7.1.1",
		"npm-run-all": "^4.1.5",
		"semver": "^5.5.0",
		"static-server": "^2.2.1",
		"tone": "^15.1.22",
		"ts-loader": "^7.0.1",
		"tslint": "^5.18.0",
		"typescript": "^5.8.3",
		"vite": "^7.0.0",
		"vite-bundle-visualizer": "^1.2.1",
		"vite-plugin-dts": "^4.5.4",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.11"
	},
	"peerDependencies": {
		"tone": "^15.1.22"
	},
	"keywords": [
		"Web Audio",
		"Tone.js",
		"Piano",
		"Sampler"
	],
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "^4.44.2"
	}
}
